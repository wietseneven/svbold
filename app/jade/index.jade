  body
    figure.boldHeader--logo.goHome.brandColor(style="color:#8db6b8")
      include ../images/boldLogo.svg
    nav.mainNav.brandColor(style="color:#8db6b8")
      a.mainNav--toggle(href="#")
        .mainNav--toggle_btn
    .mainNav--menu_wrapper
      ul.mainNav--menu_list
        li.mainNav--menu_item
          a(href="#events") Events
        li.mainNav--menu_item
          a(href="#over") Over BOLD
        li.mainNav--menu_item
          a(href="#partners") Partners
        li.mainNav--menu_item
          a(href="#contact") Contact

    .template
      .event(style='color:#8db6b8' data-color="#8db6b8" data-image="images/krakau-blur.jpg" data-type="thirdLeft")
        .event--inner
          .event--inner_content
            h2.event--inner_title Studiereis 2016
            h3.event--inner_location Krakau
            time.event--inner_date 14 <small>t/m</small> april
      .event(style='color:#c0bddc' data-color="#c0bddc" data-image="images/bierpizza-blur.jpg" data-type="thirdTop")
        .event--inner
          .event--inner_content
            h2.event--inner_title Bier & Pizza
            h3.event--inner_location Krakau
            time.event--inner_date 14 <small>t/m</small> 18 april
      .event(style='color:#4f4b86' data-color="#4f4b86" data-image="images/feest-blur.jpg" data-type="thirdBottom")
        .event--inner
          .event--inner_content
            h2.event--inner_title Bamboofeest
            h3.event--inner_location Walkabout
            time.event--inner_date 14 <small>t/m</small> 18 april

