          .event--inner_bg(style="background-image:url(images/krakau.jpg);color: #4f4b86;")
          .event--inner_content
            h1.title Studiereis 2016
            h2.location Krakau
            time.time 14 <small>t/m</small> april
      #secondEvent.event(style='color:#c0bddc', data-color="#c0bddc" data-image="images/kitten.jpg" data-proportion="0.626")
        .event--inner
          .event--inner_bg(style="background-image:url(images/kitten.jpg);color: #212744;")
          .event--inner_content
            h1.title Bier & Pizza
            h2.location Krakau
            time.time 14 <small>t/m</small> 18 april
      #thirdEvent.event(style='color:#4f4b86', data-color="#4f4b86", data-image="images/party-kitten.jpg" data-proportion="1.77736")
